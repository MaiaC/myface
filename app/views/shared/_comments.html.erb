<% if commentable.comments.any? %>
  <% commentable.comments.each do |c| %>
    <p><%= gravatar_for(c.user, size: 20) %><%= link_to c.user.name, user_path(c.user) %>: <%= c.body %></p>
  <% end %>
<% end %>

<%= form_for @comment, url: post_comments_path(commentable) do |f| %>
  <%= f.hidden_field :commentable_id, value: commentable.id %>
  <%= f.hidden_field :commentable_type, value: commentable.class.name %>
  <%= f.text_area :body, placeholder: "Comment on this" %>

  <%= f.submit "Comment" %>
<% end %>